extends: default

rules:
  line-length:
    max: 120
  document-start: disable
  trailing-spaces: enable
  truthy:
    check-keys: false
  comments-indentation: enable
  empty-lines:
    max: 1
    max-end: 1
  hyphens:
    max-spaces-before: 1
  indentation:
    spaces: 2
    indent-sequences: true
  key-duplicates: enable
  new-line-at-end-of-file: enable
  new-lines:
    type: unix
  no-trailing-spaces: enable 