[flake8]
max-line-length = 88
max-complexity = 10
select = E,W,F,C
# Ignore the following error codes:
# E203: whitespace before ':'
# E501: line too long (handled by black)
# W503: line break before binary operator
ignore = 
    E203,
    E501,
    W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    build,
    dist,
    *.egg-info
# Allow unused imports in __init__.py files
per-file-ignores =
    __init__.py:F401 