[sqlfluff]
dialect = postgres
templater = jinja

[sqlfluff:rules]
capitalisation.identifiers = { extended_capitalisation_policy = camelCase }
capitalisation.functions   = { extended_capitalisation_policy = camelCase }
capitalisation.keywords    = { capitalisation_policy          = upper      }
capitalisation.literals    = { extended_capitalisation_policy = upper      }
layout.indent              = { indent_unit = space, tab_space_size = 4, indent_size = 4 }
layout.spacing             = { indent_unit = space, tab_space_size = 4, indent_size = 4 } 