#!/bin/bash

# jobctl wrapper script for running outside the container
# This script sets the necessary environment variables to connect to the database and Redis

# Set environment variables for host connections
export IN_CONTAINER=false
export DB_HOST=localhost
export REDIS_HOST=localhost

# Default ports - modify these if your Docker setup uses different port mappings
export DB_PORT=5432
export REDIS_PORT=6379

# Run the jobctl command
cd "$(dirname "$0")/cmd/jobctl"
go run main.go "$@" 